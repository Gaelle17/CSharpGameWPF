      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="Connexion">
    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.RowSpan="1" 
               Grid.Column="1" Grid.ColumnSpan="1"
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"
               FontSize="23px" FontFamily="Arial"
               FontStyle="Normal" FontWeight="Bold"
               Content="Connection" />
        <Grid Name="form" Grid.Row="1" Grid.RowSpan="1"
              Grid.Column="1" Grid.ColumnSpan="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="45*" />
                <RowDefinition Height="32*" />
                <RowDefinition Height="29*"/>
                <RowDefinition Height="68*"/>
                <RowDefinition Height="56*" />
                <RowDefinition Height="52*" />
                <RowDefinition Height="64*"/>
                <RowDefinition Height="38*" />
                <RowDefinition Height="36*"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="116*" />
            </Grid.RowDefinitions>
            <Label VerticalAlignment="Center"
                   HorizontalAlignment="Center" 
                   Content="Pseudo :" Height="24" Margin="74,0,386,8" Width="180" Grid.Row="1" />
            <TextBox Grid.Row="3" Margin="74,12,18,34" />
            <Label Grid.Row="4" VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   Content="Password :" Margin="74,0,0,10" RenderTransformOrigin="0.792,0.365" Height="26" Width="65" />
            <TextBox Grid.Row="5" Margin="74,10,18,19" />
            <Button Grid.Row="7" Margin="220,0,226,0" 
                    Content="Connexion" />
            <Button Name="BtnRegister" Grid.Row="9" Margin="218,0,226,0" 
                    Content="Registered" />
        </Grid>
    </Grid>
</Page>
